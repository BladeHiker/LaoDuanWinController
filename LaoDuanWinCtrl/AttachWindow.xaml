<Window x:Class="LaoDuanWinCtrl.AttachWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaoDuanWinCtrl"
        mc:Ignorable="d"
        Title="AttachWindow" Height="30" WindowStyle="None" MinWidth="300 " Background="#FF3C3F42" ResizeMode="NoResize" Loaded="Window_Loaded" MouseLeftButtonDown="Grid_MouseLeftButtonDown" AllowsTransparency="True"  Topmost="True">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label x:Name="title" Foreground="LightGray" VerticalAlignment="Center"></Label>
            <!--<Button Click="Min" Background="#FF2A2F35"  Foreground="White" BorderBrush="{x:Null}" Padding="10,0">最小化</Button>-->
            <Button Click="Show" x:Name="show"  Background="#FF2A2F35"  Foreground="White" BorderBrush="{x:Null}" Padding="10,0">显示窗口</Button>
            <Button Click="Hide" x:Name="hide"  Background="#FF2A2F35"  Foreground="White" BorderBrush="{x:Null}" Padding="10,0">隐藏窗口</Button>
            <Button Click="Kill" x:Name="kill" Background="#FF2A2F35"  Foreground="White" BorderBrush="{x:Null}" Padding="10,0">关闭窗口</Button>
        </StackPanel>
    </Grid>
</Window>
